<UserControl
    x:Class="Lesson_3.Ui.StudentUi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lesson_3.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1">
                <TextBlock Margin="5" Text="Фамилия" />
                <TextBox Margin="5,0" Text="{Binding MiddleNameText}" />
                <TextBlock Margin="5" Text="Имя" />
                <TextBox Margin="5,0" Text="{Binding FirstNameText}" />
                <TextBlock Margin="5" Text="Отчество" />
                <TextBox Margin="5,0" Text="{Binding LastNameText}" />
            </StackPanel>

            <StackPanel Grid.Column="3">
                <TextBlock Margin="5" Text="Дата рождения" />
                <DatePicker Margin="5,0" SelectedDate="{Binding DateBirthText}" />
                <TextBlock Margin="5" Text="Курс университета" />
                <TextBox Margin="5,0" Text="{Binding YearUniversityText}" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3">
                <Button
                    Name="SaveStudent"
                    Margin="15"
                    Padding="5"
                    VerticalAlignment="Center"
                    Content="Добавить студента"
                    Command="{Binding AddStudent}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <DataGrid
                x:Name="dgStudentList"
                Margin="10"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding StudentList}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="30" Binding="{Binding IsStudent}" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding FullName}"
                        Header="ФИО"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Age}"
                        Header="Возраст, лет"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding YearUniversity}"
                        Header="Курс"
                        IsReadOnly="False" />
                </DataGrid.Columns>
            </DataGrid>

            <Button
                Grid.Column="1"
                Margin="10"
                Padding="5"
                VerticalAlignment="Center"
                Content="Удалить студента" Command="{Binding RemoveStudent}" />
        </Grid>
    </Grid>
</UserControl>
