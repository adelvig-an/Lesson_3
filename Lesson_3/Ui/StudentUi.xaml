<UserControl
    x:Class="Lesson_3.Ui.StudentUi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lesson_3.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1">
                <TextBlock Margin="5" Text="Фамилия" />
                <TextBox Margin="5,0" Text="{Binding Student.MiddleName}" />
                <TextBlock Margin="5" Text="Имя" />
                <TextBox Margin="5,0" Text="{Binding Student.FirstName}" />
                <TextBlock Margin="5" Text="Отчество" />
                <TextBox Margin="5,0" Text="{Binding Student.LastName}" />
            </StackPanel>

            <StackPanel Grid.Column="3">
                <TextBlock Margin="5" Text="Дата рождения" />
                <DatePicker Margin="5,0" SelectedDate="{Binding Student.DateBirth}" />
                <TextBlock Margin="5" Text="Курс университета" />
                <TextBox Margin="5,0" Text="{Binding Student.YearUniversity}" />
            </StackPanel>
        </Grid>
        <DataGrid
            x:Name="dgStudentList"
            Grid.Row="1"
            Margin="10"
            AlternatingRowBackground="White"
            FontSize="16"
            FontWeight="SemiBold"
            HorizontalGridLinesBrush="DarkGray"
            RowBackground="LightGray">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="200"
                    Header="ФИО"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="120"
                    Header="Возраст, лет"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="*"
                    Header="Курс"
                    IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
